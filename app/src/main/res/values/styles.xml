<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:button">@color/navdrawerbackground</item>
        <item name="android:listViewWhiteStyle">@color/textColorSecondary</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <!--<item name="android:windowActionBarOverlay">true</item>-->
    </style>
    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/textColorPrimary</item>
    </style>
    <style name="AppTheme.ActionBar" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--<item name="fontPath">fonts/Roboto-Medium.ttf</item>-->
    </style>
    <style name="MyEditTextTheme">
        <!-- Used for the bottom line when not selected / focused -->
        <item name="colorControlNormal">@color/colorAccent</item>
        <!-- colorControlActivated & colorControlHighlight use the colorAccent color by default -->
    </style>
    <style name="NavigationHeaderStyle">
        <item name="android:fontFamily" tools:targetApi="jelly_bean">font/Roboto-Light.ttf</item>
    </style>
    <style name="NavigationDrawerStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">20sp</item><!-- text size in menu-->
        <item name="android:fontFamily" tools:targetApi="jelly_bean">font/Roboto-Regular.ttf</item>
        <item name="android:listPreferredItemHeightSmall" tools:targetApi="ice_cream_sandwich">40dp</item><!-- item size in menu-->
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
    </style>
</resources>
